{
  "name": "ralphban",
  "version": "0.0.1",
  "private": false,
  "type": "module",
  "bin": {
    "ralphban": "./dist/cli.js"
  },
  "files": [
    "dist",
    "web-dist"
  ],
  "scripts": {
    "prebuild": "pnpm --filter @ralphban/web build && cp -r ../web/dist ./web-dist",
    "build": "tsc && chmod +x dist/cli.js",
    "dev": "tsx watch src/cli.ts",
    "typecheck": "tsc --noEmit",
    "lint": "concurrently \"eslint .\" \"prettier --check . --ignore-path ../../.prettierignore\"",
    "fix": "concurrently \"eslint --fix .\" \"prettier --write . --ignore-path ../../.prettierignore\""
  },
  "dependencies": {
    "@ralphban/api": "workspace:*",
    "@ralphban/server": "workspace:*",
    "dotenv": "^17.2.3",
    "express": "^5.2.1"
  },
  "devDependencies": {
    "@types/express": "^5.0.6",
    "@types/node": "^25.0.3",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  }
}
