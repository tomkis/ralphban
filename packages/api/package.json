{
  "name": "@ralphban/api",
  "version": "0.0.1",
  "description": "API types and tRPC router definitions for ralphban",
  "private": false,
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tomkis/ralphban.git",
    "directory": "packages/api"
  },
  "type": "module",
  "files": [
    "dist"
  ],
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "typecheck": "tsc --noEmit",
    "lint": "concurrently \"eslint .\" \"prettier --check . --ignore-path ../../.prettierignore\"",
    "fix": "concurrently \"eslint --fix .\" \"prettier --write . --ignore-path ../../.prettierignore\""
  },
  "dependencies": {
    "@trpc/server": "^11.3.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "typescript": "^5.9.3"
  }
}
