{
  "name": "ralphban-mcp",
  "version": "0.0.1",
  "private": false,
  "type": "module",
  "bin": {
    "ralphban-mcp": "./dist/mcp-cli.js"
  },
  "scripts": {
    "build": "tsc && chmod +x dist/mcp-cli.js",
    "dev": "tsx watch src/mcp-cli.ts",
    "typecheck": "tsc --noEmit",
    "lint": "concurrently \"eslint .\" \"prettier --check . --ignore-path ../../.prettierignore\"",
    "fix": "concurrently \"eslint --fix .\" \"prettier --write . --ignore-path ../../.prettierignore\""
  },
  "dependencies": {
    "@ralphban/api": "workspace:*",
    "@ralphban/server": "workspace:*",
    "@modelcontextprotocol/sdk": "^1.0.4",
    "dotenv": "^17.2.3",
    "yargs": "^18.0.0"
  },
  "devDependencies": {
    "@types/node": "^25.0.3",
    "@types/yargs": "^17.0.33",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  }
}
