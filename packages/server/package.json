{
  "name": "@ralphban/server",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "docker-compose up -d && tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "typecheck": "tsc --noEmit",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "db:init": "tsx scripts/init-db.ts",
    "lint": "concurrently \"eslint .\" \"prettier --check .\"",
    "fix": "concurrently \"eslint --fix .\" \"prettier --write .\"",
    "mcp:stdio": "tsx src/mcp/stdio-server.ts"
  },
  "dependencies": {
    "@anthropic-ai/claude-agent-sdk": "^0.2.2",
    "@modelcontextprotocol/sdk": "^1.0.4",
    "@types/pg": "^8.16.0",
    "dotenv": "^17.2.3",
    "eventsource-parser": "^3.0.6",
    "express": "^5.2.1",
    "pg": "^8.16.3",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/node": "^25.0.3",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  }
}
